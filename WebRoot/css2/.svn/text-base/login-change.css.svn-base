/*.....................找回密码页面......................*/



.find-form-box {
	width:850px;
	height:400px;
	margin:0 auto;
	margin-top:50px;
	margin-bottom:20px;
	padding:10px;
}
/*纯div+css圆角样式*/
div.nifty {
	margin: 0 10%;
	background:#fff;
}
p {
	padding:10px
}

div.rtop, div.rbottom{
	display:block;
	background: #FFF;
}
div.rtop div, div.rbottom div{
	display:block;
	height: 1px;
	overflow: hidden;
	background: #f90
}
div.r1 {
	margin: 0 5px
}
div.r2 {
	margin: 0 3px
}
div.r3 {
	margin: 0 2px
}
div.rtop div.r4, div.rbottom div.r4 {
	margin: 0 1px;
	height: 2px
}
/*表格样式*/
.findback_pwd_frame {
	margin:0 auto;
	padding:20px;
	line-height:3;
	border-left:2px solid #f90;
	border-right:2px solid #f90;
}
.findback_pwd_frame .user-name {
	width:200px;
	height:20px;
}
.findback_pwd_frame .checkNO {
	width:80px;
	height:20px;
}

/*表单样式*/
.user-name {
	padding: 5px;
	font-size: 15px;
	text-shadow: 0px 1px 0px #fff;
	outline: none;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	border: 1px solid #ccc;
	-webkit-transition: .3s ease-in-out;
  	-moz-transition: .3s ease-in-out;
  	-o-transition: .3s ease-in-out;
}

.user-name:focus {
	border: 1px solid #fafafa;
	-webkit-box-shadow: 0px 0px 6px #f60;
	-moz-box-shadow: 0px 0px 5px #f60;
	box-shadow: 0px 0px 5px #f60;
}

a, a:visited {
	color: #000;
	text-decoration: none;
	text-shadow: 0px 1px 0px #fff;
}

a:hover {
	border-bottom: 1px dotted #fff;
}
.checkNO {
	padding: 5px;
	font-size: 15px;
	text-shadow: 0px 1px 0px #fff;
	outline: none;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	border: 1px solid #ccc;
	-webkit-transition: .3s ease-in-out;
  	-moz-transition: .3s ease-in-out;
  	-o-transition: .3s ease-in-out;
}

.checkNO:focus {
	border: 1px solid #fafafa;
	-webkit-box-shadow: 0px 0px 6px #f60;
	-moz-box-shadow: 0px 0px 5px #f60;
	box-shadow: 0px 0px 5px #f60;
}

a, a:visited {
	color: #000;
	text-decoration: none;
	text-shadow: 0px 1px 0px #fff;
}

a:hover {
	border-bottom: 1px dotted #fff;
}



/*================================弹出登录框======================================*/
.tip-login-box {
	width:400px;
	height:290px;
	padding:10px;
	background:#fc6;
	position:fixed;
	_position:absolute;
	filter:alpha(opacity=80);
	opacity:0.9;
	left:0px;
	top:0px;
	z-index: 100;
}
.tip-login-title {
	width:380px;
	height:30px;
    background:url(../images/369caibg/group-top.png) repeat-x;
	border:1px solid #f90;
	padding-left:20px;
	font-size:16px;
	color:white;
	font-weight:bold;
}
.tip-login-title li{
	float:left;
	
}
.login-words {
	font-size:17px; 
	color:white;
}
.close-box {
	margin-left:260px;
}

.tip-form {
	border:1px solid #f90;
	background:white;
	padding-left:16px;
	padding-top:10px;
}
.tip-form p {
	margin:0px 0px 9px 0px;
}
.tip-login-register {
	margin-top:4px;
	text-align:center;
}
.img-change a:link, .img-change a:visited {
	height:20px;
	padding:0px 15px 3px 45px;
	color: gray;
	font-size:15px;
	font:"微软雅黑";
	text-decoration: none;
	text-align:left;

}
.img-change a:hover {
	width:80px;
	height:20px;
	margin-left:39px;
	color: #f60;
	font-size:15px;
	font:"微软雅黑";
	border:2px solid #ffcc7f;
	border-right:2px solid #fff;
	background:url(../images/add.png);
}
